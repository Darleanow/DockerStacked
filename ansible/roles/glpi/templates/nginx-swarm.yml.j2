services:
  nginx:
    image: nginx:alpine
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - {{ stack.path }}/nginx.conf:/etc/nginx/nginx.conf:ro
      - {{ stack.ssl_path }}:/etc/nginx/ssl:ro
      - certbot-data:/var/www/certbot:ro
      - letsencrypt:/etc/letsencrypt:ro
    deploy:
      mode: replicated
      replicas: 3
    networks:
      - {{ stack.network }}

  certbot:
    image: certbot/certbot
    volumes:
      - certbot-data:/var/www/certbot
      - letsencrypt:/etc/letsencrypt
    entrypoint: "/bin/sh -c 'trap exit TERM; while :; do sleep 12h; done'"
    deploy:
      replicas: 1

volumes:
  certbot-data:
  letsencrypt:

networks:
  {{ stack.network }}:
    external: true
